[alias]
    co = checkout
    br = branch
    ci = commit -v
    st = status -sb
    unstage = reset HEAD --
    last = log -1 HEAD
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    prune-local = !git branch --merged | grep -v \"^\\*\" | xargs git branch -d
    stats = shortlog -sne
    whatsnew = log HEAD@{1}..
    incoming = "!git remote update -p; git log ..@{u}"
    outgoing = log @{u}..
    start = !sh -c 'git fetch && git checkout -b $0 origin/$0'

[color]
	ui = true

[core]
    editor = nvim
    excludesfile = ~/Development/dotfiles/git/gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[push]
    default = simple
	autoSetupRemote = true

[user]
	name = Torjus Bj√•en
	email = torjus.bjaaen@try.no

[diff]
    algorithm = patience

[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true

[diff-so-fancy]
	markEmptyLines = false
[pull]
	ff = only
[interactive]
	diffFilter = diff-so-fancy --patch
#	diffFilter = /opt/homebrew/bin/diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red
	new = green
	whitespace = red reverse
[init]
	defaultBranch = main
